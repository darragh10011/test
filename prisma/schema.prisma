generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  AUTHOR
  CUSTOMER
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum OverrideType {
  ADD
  REMOVE
}

enum AuditAction {
  CREATED
  CONFIRMED
  RESCHEDULED
  CANCELLED
  ADMIN_EDITED
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String?  @unique
  role      Role     @default(CUSTOMER)
  timezone  String   @default("UTC")
  createdAt DateTime @default(now())

  authorProfile AuthorProfile?
  appointments  Appointment[] @relation("CustomerAppointments")
  auditLogs     AppointmentAudit[]

  accounts Account[]
  sessions Session[]
}

model AuthorProfile {
  id                     String   @id @default(cuid())
  userId                 String   @unique
  bio                    String?
  defaultBufferBeforeMin Int      @default(0)
  defaultBufferAfterMin  Int      @default(0)
  slotGranularityMin     Int      @default(15)
  maxBookingsPerDay      Int?

  user             User                @relation(fields: [userId], references: [id])
  interviewTypes   InterviewType[]
  availability     AvailabilityRule[]
  overrides        AvailabilityOverride[]
  appointments     Appointment[]
}

model InterviewType {
  id                     String   @id @default(cuid())
  authorId               String
  name                   String
  durationOptionsMin     Int[]
  bufferBeforeMin        Int
  bufferAfterMin         Int
  minNoticeHours         Int?
  cancellationPolicyHours Int @default(24)
  locationRequired       Boolean @default(false)

  author       AuthorProfile @relation(fields: [authorId], references: [id])
  appointments Appointment[]
}

model AvailabilityRule {
  id             String   @id @default(cuid())
  authorId       String
  dayOfWeek      Int
  startTimeLocal String
  endTimeLocal   String
  active         Boolean  @default(true)

  author AuthorProfile @relation(fields: [authorId], references: [id])
}

model AvailabilityOverride {
  id             String       @id @default(cuid())
  authorId       String
  dateLocal      String
  type           OverrideType
  startTimeLocal String?
  endTimeLocal   String?
  note           String?

  author AuthorProfile @relation(fields: [authorId], references: [id])
}

model Appointment {
  id               String             @id @default(cuid())
  authorId         String
  customerId       String
  interviewTypeId  String
  startAtUtc       DateTime
  endAtUtc         DateTime
  status           AppointmentStatus
  customerTimezone String
  authorTimezone   String
  locationText     String?
  meetingLink      String?
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt

  author       AuthorProfile @relation(fields: [authorId], references: [id])
  customer     User          @relation("CustomerAppointments", fields: [customerId], references: [id])
  interviewType InterviewType @relation(fields: [interviewTypeId], references: [id])
  audits       AppointmentAudit[]

  @@index([authorId, startAtUtc])
  @@index([customerId, startAtUtc])
}

model AppointmentAudit {
  id            String      @id @default(cuid())
  appointmentId String
  actorUserId   String
  action        AuditAction
  beforeJson    Json?
  afterJson     Json?
  createdAt     DateTime    @default(now())

  appointment Appointment @relation(fields: [appointmentId], references: [id])
  actor       User        @relation(fields: [actorUserId], references: [id])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
